<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#081C3A"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/button_signup_start"
        android:layout_width="315dp"
        android:layout_height="73dp"
        android:layout_marginTop="248dp"
        android:background="@drawable/button_signup"
        android:text="Sign Up"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.541"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/editTextText"
        android:layout_width="413dp"
        android:layout_height="95dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="128dp"
        android:layout_marginBottom="164dp"
        android:ems="10"
        android:inputType="text"
        android:text="WELCOME"
        android:textColor="#EBE2E2"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/button_login_start"
        app:layout_constraintStart_toStartOf="@+id/button_signup_start"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_login_start"
        android:layout_width="315dp"
        android:layout_height="76dp"
        android:layout_marginStart="52dp"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="314dp"
        android:background="@drawable/button_signup"
        android:text="Login"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextText"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>